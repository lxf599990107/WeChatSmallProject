page{
  background: #F1F3F2;
}
.navTop{
  height: 90rpx;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1000;
  width: 100%;
  background:#45AA68;
  color: #ffffff;
  margin-bottom: 20rpx;
}
.navTop-lbs__items{
  position: relative;
  overflow-x: scroll;
  -webkit-overflow-scrolling: touch;
  white-space: nowrap;
  padding: 0rpx 20rpx;
  width: 100%; 
  height: 100rpx;
}
.navTop-list-item{
  display: inline-block;
}
.navTop-list-item__title{
  display: inline-block;
  margin-right: 40rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  line-height: 70rpx;
  height: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  white-space: nowrap;
}
.active-top-border {
  border-bottom: 5rpx solid #ffffff;
}

.item{
  display: block;
  width: 93%;
  height: 470rpx;
  border-radius: 15rpx;
  margin: 25rpx auto;
  background: #FFF;
}
.item:nth-of-type(1){
  margin-top: 115rpx;
}
.item image{
  display: block;
  width: 100%;
  height: 340rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;

}
.item_bottom{
  width: 100%;
  height: 70rpx;
}
.item_bottom_left{
  display: inline-block;
  line-height: 80rpx;
  font-weight: 700;
  font-size: 30rpx;
  padding-left: 20rpx;
}
.item_bottom_right{
  line-height: 80rpx;
  color: #45AA68;
  font-size: 28rpx;
  float: right;
  padding-right: 20rpx;
}
.content{
  display: block;
  padding-left: 20rpx;
  color: #8A8B8B;
  font-size: 26rpx;
}