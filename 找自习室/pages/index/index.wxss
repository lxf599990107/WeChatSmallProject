page{
  background: #F3F4F6;
}
.header{
  width: 100%;
  height: 215rpx;
  background: #45AA68;
  position: relative;
}
.name{
  display: block;
  width: 170rpx;
  font-size: 55rpx;
  font-weight: 700;
  color: #FFF;
  padding-top: 15rpx;
  margin: 0rpx auto 2rpx;
}
.tip{
  display: block;
  width: 380rpx;
  text-align: center;
  font-size: 20rpx;
  font-weight: 500;
  color: #FFF;
  margin: -15rpx auto;
}
.weui-search-bar{
  width: 90%;
  border-radius: 8rpx;
  position: relative;
  margin: auto;
  top: 56rpx;
  background-color:#FFF;
}
.weui-search-bar__form{
  border: none;
  /* border-right: 2rpx #CCC solid; */
  /* font-size: 16rpx; */
}


.weui-grids{
  width: 100%;
  height: 110rpx;
  border: none;
  background: #FFF;
  position: fixed;
  bottom: 0;
}
.weui-grid{
  height: 110rpx;
  border: none;
}
.weui-grid__icon{
  width:40rpx;
  height:40rpx;
  margin:-24rpx auto 0;
}
.weui-grid__label{
  color: #45AA68;
  margin-top: 0rpx;
}

/* 中间内容 */
.container{
  width:100%;
  height:auto;
  position:absolute;
  top:252rpx;
}
.empty{
  display: block;
  width: 440rpx;
  height: 260rpx;
  position: relative;
  top: 170rpx;
  left: 155rpx;
  margin-bottom: 180rpx;
}
.noCourses {
  text-align: center;
}
.noCourses p{
  display: block;
}
.noCourses .p1{
  font-size: 28rpx;
  color: #888A89;
}
.noCourses .p2{
  font-size: 24rpx;
  color: #B2B5BA;
}
.noCourses .p2 text{
  color: #45AA68;
}

.weui-panel{
  width: 93%;
  background-color:#F3F4F6;

  margin: auto;
}
.weui-panel__hd{
  background-color:#FFF;
  margin-top: 10rpx;
  border: none
}
.weui-panel__bd{
  background-color:#FFF;
  margin-bottom: 10rpx;
  border: none
}
.collection{
  width: 50rpx;
  height: 50rpx;
  z-index: 100;
}
